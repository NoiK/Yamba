<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.noik.yamba" >

    <uses-sdk android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.noik.yamba.StatusActivity"
            android:label="@string/status_update" >
            <intent-filter>
                <action android:name="nl.noik.yamba.action.tweet" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.noik.yamba.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="nl.noik.yamba.SettingsActivity"
            android:label="@string/action_settings" >
        </activity>

        <service android:name=".RefreshService" />
        <provider
            android:authorities="nl.noik.yamba.StatusProvider"
            android:name="nl.noik.yamba.StatusProvider"
            android:exported="false" />
    </application>

</manifest>
